---
import { getCollection, getEntry } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { Picture } from "astro:assets";

// Generate a new path for every Thai blog entry
export async function getStaticPaths() {
  const blogEntries = await getCollection("blog", ({ id }) => {
    return id.startsWith("th/");
  });
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug.replace(/^th\//, "") }, // Remove 'th/' prefix for URL
    props: { entry },
  }));
}

// Get the entry directly from the prop on render
const { entry } = Astro.props;
const { Content } = await entry.render();
const authorsEntry = await getEntry("staffs", "authors");
const author = entry.data.author ? authorsEntry?.data[entry.data.author] : null;
const cleanSlug = entry.slug.replace(/^th\//, "");
---

<Layout title={entry.data.title}>
  <Container>
    <div class="mx-auto max-w-3xl text-center mt-14">
      <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
        {entry.data.category}
      </span>
      <h1
        class="text-3xl lg:text-4xl font-bold lg:tracking-tight mt-1 lg:leading-tight">
        {entry.data.title}
      </h1>
      <div
        class="flex gap-2 mt-3 items-center justify-center text-sm flex-wrap md:flex-nowrap">
        <span class="text-slate-400">
          {author ? author.name : entry.data.author}
        </span>
        <span class="text-slate-400">•</span>
        <time
          class="text-slate-400"
          datetime={entry.data.publishDate.toISOString()}>
          {
            entry.data.publishDate.toLocaleDateString("th-TH", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </time>
        <span class="text-slate-400 hidden md:block">•</span>
        <div class="w-full md:w-auto flex flex-wrap justify-center gap-3">
          {
            entry.data.tags.map((tag) => (
              <span class="text-sm text-slate-500">#{tag}</span>
            ))
          }
        </div>
      </div>
    </div>

    <div class="mx-auto max-w-4xl">
      <Picture
        formats={["avif", "webp"]}
        src={entry.data.image.src}
        alt="Feature image"
        width="1280"
        height="800"
        class="h-full w-full object-contain rounded-xl mt-6"
        transition:name={`post-img-${cleanSlug}`}
      />
    </div>

    <div
      class="mx-auto prose mt-6 max-w-3xl prose-headings:mb-2 prose-headings:mt-8">
      <Content />
    </div>

    {
      author && (
        <div class="mx-auto max-w-3xl mt-12 bg-gray-50 p-6 rounded-xl flex flex-col md:flex-row gap-6 items-center text-center md:text-left border border-gray-100">
          <Picture
            src={author.avatar}
            alt={author.name}
            width={100}
            height={100}
            class="rounded-full w-24 h-24 object-cover border-2 border-white shadow-sm"
            formats={["avif", "webp"]}
          />
          <div>
            <span class="text-xs text-gray-500 uppercase tracking-wider font-semibold">
              เขียนโดย
            </span>
            <h3 class="text-lg font-bold text-gray-900 mt-1">{author.name}</h3>
            <p class="text-sm text-blue-600 font-medium">{author.position}</p>
            <p class="text-gray-600 mt-2 italic">"{author.believe}"</p>
          </div>
        </div>
      )
    }

    <div class="text-center mt-12">
      <a
        href="/th/blog"
        class="bg-gray-100 px-5 py-3 rounded-md hover:bg-gray-200 transition"
        >← กลับไปหน้าบล็อก</a
      >
    </div>
  </Container>
</Layout>
