---
import { ClientRouter } from "astro:transitions";
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import LanguageBanner from "@components/language-banner.astro";

import "@fontsource-variable/inter/index.css";

export interface Props {
  title?: string;
  footerMargin?: boolean;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();

const { title, footerMargin = true } = Astro.props;

const makeTitle = title
  ? title + " | " + "DealDroid"
  : "DealDroid - No-Code Chatbot for Quality Seller";

const lang = Astro.currentLocale || "en";
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={makeTitle}
      description="Astroship Pro - SAAS & Startup Website Template for Astro built with TailwindCSS."
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Astroship Pro - SAAS &Startup Website Template for Astro`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Astroship Homepage Screenshot",
        },
      }}
    />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
    <ClientRouter />
    <link
      rel="stylesheet"
      href="https://happyhead.dealdroid.net/assets/index.css"
    />
  </head>
  <body>
    <LanguageBanner />
    <Navbar />
    <slot />
    <Footer margin={footerMargin} />
    <script
      type="module"
      src="https://happyhead.dealdroid.net/assets/index.js?scriptId=script_xaugxgesi6a&color=4f46e5"
    ></script>
  </body>
</html>
