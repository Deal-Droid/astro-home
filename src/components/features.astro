---
// @ts-ignore
import Badge from "@components/ui/badge.astro";
import { Icon } from "astro-icon/components";
import { useTranslations, usePageTranslations } from "../i18n/utils";
import type { UILanguages } from "../i18n/ui";

const page_ui: UILanguages = {
  en: {
    "feature.tag": "Smart Features",
    "feature.h1": "Smart features that drive sales",
    "feature.description":
      "High-level capabilities designed for business outcomes. See our Feature page for technical details.",
    "feature.link": "See all features",
  },
  th: {
    "feature.tag": "ฟีเจอร์อัจฉริยะ",
    "feature.h1": "ฟีเจอร์อัจฉริยะที่ช่วยเพิ่มยอดขาย",
    "feature.description":
      "ความสามารถระดับสูงที่ออกแบบมาเพื่อผลลัพธ์ทางธุรกิจ ดูรายละเอียดทางเทคนิคในหน้า Feature",
    "feature.link": "ดูฟีเจอร์ทั้งหมด",
  },
} as const;

const lang = Astro.currentLocale || "en";
const t = useTranslations(lang);
const p = usePageTranslations(lang, page_ui);

const features_th = [
  {
    title: "ประหยัดเวลาทีมงาน",
    description:
      "จัดการงานซ้ำๆ และคำถามที่พบบ่อยอัตโนมัติ ให้ทีมโฟกัสกับลูกค้าสำคัญ",
    icon: "fluent:people-team-24-regular",
  },
  {
    title: "เพิ่มยอดขาย",
    description:
      "แนะนำสินค้าอัจฉริยะพร้อมรูปภาพ และชำระเงินง่าย เพิ่ม conversion rate",
    icon: "fluent:chart-multiple-24-regular",
  },
  {
    title: "ทำงาน 24/7",
    description: "ไม่พลาดลูกค้า รับ lead นอกเวลาทำงานและวันหยุดอัตโนมัติ",
    icon: "fluent:clock-24-regular",
  },
  {
    title: "รักษาสไตล์แบรนด์",
    description: "ตอบในน้ำเสียงและนโยบายของคุณ เหมือนทีมงาน ไม่ใช่หุ่นยนต์",
    icon: "fluent:speaker-24-regular",
  },
  {
    title: "รองรับสินค้าจำนวนมาก",
    description: "เข้าใจสินค้าจากรูปภาพ และเปรียบเทียบสินค้าได้ตามต้องการ",
    icon: "fluent:box-multiple-24-regular",
  },
  {
    title: "รองรับหลายภาษา",
    description: "ตอบลูกค้าในภาษาของเขาอัตโนมัติ ไม่ต้องตั้งค่าเพิ่ม",
    icon: "fluent:translate-24-regular",
  },
] as const;

const features_en = [
  {
    title: "Save staff hours",
    description:
      "Automates repetitive admin tasks and FAQs so your team can focus on high-value conversations.",
    icon: "fluent:people-team-24-regular",
  },
  {
    title: "Close more deals",
    description:
      "Intelligent product suggestions with images and guided checkout increase conversion rates.",
    icon: "fluent:chart-multiple-24-regular",
  },
  {
    title: "Work 24/7",
    description:
      "Never miss a customer. Capture leads after hours and on weekends automatically.",
    icon: "fluent:clock-24-regular",
  },
  {
    title: "Keep your brand voice",
    description:
      "Responses tuned to your tone and policies. Sounds like your team, not a robot.",
    icon: "fluent:speaker-24-regular",
  },
  {
    title: "Handle large catalogs",
    description:
      "Product-aware replies that understand images and can compare items on demand.",
    icon: "fluent:box-multiple-24-regular",
  },
  {
    title: "Multi-language support",
    description:
      "Works with customers in their language automatically. No extra setup needed.",
    icon: "fluent:translate-24-regular",
  },
] as const;

const features_all = {
  en: features_en,
  th: features_th,
} as const;

const features = features_all[lang];
---

<!-- <div class="mt-16">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    We have got more awesome <span class="text-indigo-600">features</span>
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Use this section to highlight not so important features of your product.
  </p>
</div> -->
<div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center">
  <Badge color="purple">{p("feature.tag")}</Badge>
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
    {p("feature.h1")}
  </h2>
  <p class="text-lg mt-4 text-slate-600 text-center [text-wrap:pretty]">
    {p("feature.description")}
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-8 md:gap-16">
  {
    features.map((item) => (
      <div class="flex flex-col gap-4 items-start group hover:bg-slate-50 hover:border-slate-100 border border-transparent rounded-lg transition-all md:-m-5 p-5">
        <div class="mt-1 bg-indigo-50 border shadow shadow-indigo-100/50 border-indigo-100 transition-colors rounded-lg grid place-items-center  p-2 w-10 h-10 shrink-0">
          <Icon class="text-indigo-500" name={item.icon} size="24" />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{" "}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>

<div class="mt-12 text-center">
  <a
    href="/features"
    class="text-indigo-600 hover:text-indigo-700 font-medium inline-flex items-center gap-2 transition-colors">
    {p("feature.link")}
    <Icon name="fluent:arrow-right-24-regular" size="20" />
  </a>
</div>
