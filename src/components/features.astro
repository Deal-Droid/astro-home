---
// @ts-ignore
import Badge from '@components/ui/badge.astro';
import { Icon } from 'astro-icon/components';
import { useTranslations, usePageTranslations } from '../i18n/utils';
import type { UILanguages } from '../i18n/ui';

const page_ui: UILanguages = {
  en: {
    'feature.tag': 'More Features',
    'feature.h1': "We've got you covered",
    'feature.description':
      "We strive to make our chat bot comprehensive, covering all the needs of online sellers. If there's anything we don't have yet, please don't hesitate to contact us.",
  },
  th: {
    'feature.tag': 'More Features',
    'feature.h1': 'ความสามารถครบวงจร',
    'feature.description':
      'เราพยายามทำ chat bot ให้มีความสามารถครอบคลุม ทุกความต้องการของแม่ค้าออนไลน์ หากยังมีอะไรที่เราไม่มี โปรดอย่าเกรงใจสามารถติดต่อหาเราได้เลย',
  },
} as const;

const lang = Astro.currentLocale || 'en';
const t = useTranslations(lang);
const p = usePageTranslations(lang, page_ui);

const features_th = [
  {
    title: 'สรุปตะกร้าสินค้า',
    description:
      "Bot สามารถเข้าใจบทสนทนาทั้งหมด แล้วนำมาสรุปเป็นตะกร้าสินค้าได้ทันที ดังนั้นผู้ใช้สามารถสั่ง 'เพิ่ม 1 ชิน' หรือสั่ง 'เอาสีแดงอีก 1' ได้เลย",
    icon: 'fluent:cart-24-regular',
  },
  {
    title: 'รวบรวมประวัติการขาย',
    description:
      'ระบบสามารถสรุปออกมาเป็น excel ได้ว่าวันนี้ขายกับลูกค้าคนไหนบ้าง มีสินค้าอะไรบ้าง ลูกค้าติดต่อเข้ามาเวลาไหนบ้าง เพื่อให้เจ้าของร้านนำมาวิเคราะห์ในภายหลัง',
    icon: 'fluent:chat-24-regular',
  },
  {
    title: 'เลือกคำถามที่ให้ Bot ตอบได้',
    description:
      'ไม่จำเป็นต้องให้ Bot ตอบทุกคำถาม เจ้าของร้านสามารถเลือกชนิดของคำถามที่อยากให้ Bot ตอบหรือไม่ตอบก็ได้ หรือในช่วงแรกอาจจะให้ตอบเฉพาะทำทักทาย แล้วช่วงหลังค่อยให้ตอบสิ่งที่ซับซ้อนมากขึ้นก็ได้.',
    icon: 'fluent:checkbox-checked-24-regular',
  },
  {
    title: 'ระบบตอบตาม keyword',
    description:
      'ร้านค้่าสามารถตั้ง keyword ให้ระบบตอบตามที่ตั้งเอาไว้ได้ นอกจากนั้นยังสามารถตั้งตัวเลือกให้ผู้ใช้เลือกได้อีกด้วย ทำให้การสั่งซื้อสามารถทำแบบรวดเร็วได้ด้วย',
    icon: 'fluent:tag-24-regular',
  },
  {
    title: 'รองรับหลายภาษา',
    description:
      'Bot จะพยายามตอบเป็นภาษาเดียวกับที่ลูกค้าถาม โดยระบบรองรับทั้งภาษาไทย ภาษาจีน ภาษาอังกฤษ และอีกหลายภาษา เจ้าของร้านสามารถตั้งได้ว่าจะให้ตอบในภาษาอะไร',
    icon: 'fluent:translate-24-regular',
  },
  {
    title: 'ทำงาน 24 ชั่วโมง',
    description:
      'Bot สามารถทำงานได้ตลอด 24 ขั่วโมงโดยไม่หยุดพัก และคุณภาพไม่ลดลง ช่วยให้แม่ค้าสามารถรักษาความต่อเนื่องในการคุยกับลูกค้าได้ ลดความเสี่ยงในการเสียลูกค้าไป',
    icon: 'fluent:clock-toolbox-24-regular',
  },
] as const;

const features_en = [
  {
    title: 'Smart Cart Summary',
    description:
      'The Bot understands entire conversations and can instantly summarize them into a shopping cart. Users can simply say "add 1 piece" or "one more in red" for seamless ordering.',
    icon: 'fluent:cart-24-regular',
  },
  {
    title: 'Sales History Tracking',
    description:
      'The system can export daily sales data to Excel, showing customer interactions, products sold, and contact timestamps - enabling shop owners to analyze business performance.',
    icon: 'fluent:chat-24-regular',
  },
  {
    title: 'Customizable Bot Responses',
    description:
      'Shop owners can choose which types of questions the Bot should answer. Start with basic greetings and gradually enable more complex responses as needed.',
    icon: 'fluent:checkbox-checked-24-regular',
  },
  {
    title: 'Keyword Response System',
    description:
      'Stores can set up custom keyword triggers with automated responses. Quick-select options can also be configured for faster ordering process.',
    icon: 'fluent:tag-24-regular',
  },
  {
    title: 'Multilingual Support',
    description:
      "The Bot responds in the customer's language, supporting Thai, Chinese, English, and many other languages. Shop owners can configure preferred response languages.",
    icon: 'fluent:translate-24-regular',
  },
  {
    title: '24/7 Operation',
    description:
      'The Bot operates round-the-clock without breaks or quality degradation, maintaining consistent customer communication and reducing the risk of losing potential sales.',
    icon: 'fluent:clock-toolbox-24-regular',
  },
] as const;

const features_all = {
  en: features_en,
  th: features_th,
} as const;

const features = features_all[lang];
---

<!-- <div class="mt-16">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    We have got more awesome <span class="text-indigo-600">features</span>
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    Use this section to highlight not so important features of your product.
  </p>
</div> -->
<div class="mt-24 max-w-3xl mx-auto flex flex-col items-center justify-center">
  <Badge color="purple">{p('feature.tag')}</Badge>
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-4 text-center">
    {p('feature.h1')}
  </h2>
  <p class="text-lg mt-4 text-slate-600 text-center [text-wrap:pretty]">
    {p('feature.description')}
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-8 md:gap-16">
  {
    features.map((item) => (
      <div class="flex flex-col gap-4 items-start group hover:bg-slate-50 hover:border-slate-100 border border-transparent rounded-lg transition-all md:-m-5 p-5">
        <div class="mt-1 bg-indigo-50 border shadow shadow-indigo-100/50 border-indigo-100 transition-colors rounded-lg grid place-items-center  p-2 w-10 h-10 shrink-0">
          <Icon
            class="text-indigo-500"
            name={item.icon}
            size="24"
          />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>{' '}
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
