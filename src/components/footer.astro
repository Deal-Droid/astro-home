---
import Container from "@components/container.astro";
import { Icon } from "astro-icon/components";
import { languages } from "i18n/ui";

import {
  useTranslations,
  usePageTranslations,
  useTranslatedPath,
} from "../i18n/utils";
import type { UILanguages } from "../i18n/ui";
import { getRelativeLocaleUrl } from "astro:i18n";

const { margin } = Astro.props;

const page_ui: UILanguages = {
  en: {
    "footer.company": "Company",
    "footer.document": "Documents",
    "footer.document.home": "Home",
    "footer.document.getting_started": "Getting Started",
    "footer.description":
      "Dealdroid is a SaaS and startups chatbot platform. Built with lastes AI Technologoy.",
    "footer.copyright": "All rights reserved.",
  },
  th: {
    "footer.company": "บริษัท",
    "footer.document": "คู่มือ",
    "footer.document.home": "หน้าหลัก",
    "footer.document.getting_started": "การเริ่มต้น",
    "footer.description":
      "Dealdroid เป็นระบบแชทบอทสำหรับปิดการขาย พัฒนาบนเทคโนโลยี AI ล่าสุด โดยมีเป้าหมายให้เจ้าของธุรกิจสามารถใช้งานง่ายๆ ด้วยตนเอง",
    "footer.copyright": "สงวนลิขสิทธิ์",
  },
} as const;

const lang = Astro.currentLocale || "en";
const translatePath = useTranslatedPath(lang);
const t = useTranslations(lang);
const p = usePageTranslations(lang, page_ui);

const footermenu = {
  company: [
    {
      title: t("general.home"),
      path: translatePath("/"),
    },
    // {
    //   title: t('general.blog'),
    //   path: '/blog',
    // },
    {
      title: t("general.contact"),
      path: translatePath("/contact"),
    },
    {
      title: t("general.terms"),
      path: translatePath("/terms"),
    },
    {
      title: t("general.privacy"),
      path: translatePath("/privacy"),
    },
  ],
  product: [
    {
      title: p("footer.document.home"),
      path: "http://docs.dealdroid.net",
    },
    {
      title: p("footer.document.getting_started"),
      path: "http://docs.dealdroid.net/getting-started/overview/",
    },
  ],
  resources: [
    {
      title: "Help Center",
      path: "#",
    },
    {
      title: "Guides",
      path: "#",
    },
    {
      title: "Documentation",
      path: "#",
    },
    {
      title: "Uptime Status",
      path: "#",
    },
  ],
};
---

<footer
  class:list={[
    "py-14 bg-slate-100 border-t border-slate-100",
    margin && "mt-10",
  ]}>
  <Container>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
      <div class="sm:col-span-2 md:col-span-3 lg:col-span-2">
        <a href="/" class="text-lg flex items-center"
          ><span class="font-bold text-indigo-600">Deal</span><span
            class="text-slate-600">droid</span
          >
          <!-- <span
            class="uppercase mt-0.5 leading-none text-[10px] ml-1 font-bold bg-gray-200 text-slate-700 px-2 py-1 rounded-md"
            >PRO</span
          > -->
        </a>
        <p class="mt-4 text-sm text-slate-700 max-w-xs">
          {p("footer.description")}
        </p>
        <div class="flex gap-3 mt-4 items-center">
          <a
            href="https://discord.gg/ZnGSSbQg4N"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-slate-200 hover:bg-slate-300 rounded w-6 h-6 inline-flex items-center justify-center text-slate-500">
            <Icon name="bx:bxl-discord" class="w-4 h-4" />
            <span class="sr-only">Discord</span></a
          >
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-slate-800">
          {p("footer.company")}
        </h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.company.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-slate-600 hover:text-indigo-600">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-slate-800">
          {p("footer.document")}
        </h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.product.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-slate-600 hover:text-indigo-600">
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-slate-800 flex items-center gap-1">
          <Icon name="fluent:translate-20-filled" class="w-4 h-4" /> Language
        </h3>
        <div class="flex flex-col mt-3">
          {
            Object.entries(languages).map(([lang, label]) => {
              const pathWithoutLocale = Astro.url.pathname.replace(
                /^\/[a-z]{2}(?=-|\/|$)/,
                ""
              );
              return (
                <a
                  href={getRelativeLocaleUrl(lang, pathWithoutLocale)}
                  class="language-switcher py-2 text-sm text-slate-600 hover:text-indigo-600"
                  data-language={lang}>
                  {label}
                </a>
              );
            })
          }
        </div>
      </div>
    </div>

    <div class="mt-14 pt-8 px-5 border-t border-slate-200">
      <Container>
        <p class="text-center text-sm text-slate-600 [text-wrap:balance]">
          Copyright © {new Date().getFullYear()} Dealdroid. {
            p("footer.copyright")
          }
        </p>
        <p class="text-center text-xs text-slate-600 mt-2">
          <a href={translatePath("/terms")} class="hover:text-indigo-500"
            >{t("general.terms")}</a
          > ・ <a
            href={translatePath("/privacy")}
            class="hover:text-indigo-500">
            {t("general.privacy")}</a
          >
        </p>
      </Container>
    </div>
  </Container>
</footer>

<script>
  /**
   * Footer Language Switcher - localStorage Sync
   *
   * Updates localStorage when users change language via footer links
   * This ensures the language banner won't show again after selection
   */

  const STORAGE_KEY = "user-language-preference";
  const BANNER_SHOWN_KEY = "language-banner-shown";

  /**
   * Save language preference when footer language link is clicked
   */
  function initFooterLanguageSwitcher(): void {
    const languageSwitchers = document.querySelectorAll(".language-switcher");

    languageSwitchers.forEach((link) => {
      link.addEventListener("click", (event) => {
        const selectedLanguage = (
          event.currentTarget as HTMLElement
        ).getAttribute("data-language");

        if (selectedLanguage) {
          try {
            // Save the selected language to localStorage
            localStorage.setItem(STORAGE_KEY, selectedLanguage);
            localStorage.setItem(BANNER_SHOWN_KEY, "true");
          } catch (error) {
            console.error(
              "Error saving language preference from footer:",
              error
            );
          }
        }
      });
    });
  }

  // Initialize when DOM is ready
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initFooterLanguageSwitcher);
  } else {
    initFooterLanguageSwitcher();
  }
</script>
